--recurse=yes
--exclude=.git
--exclude=BUILD
--exclude=.svn 
--exclude=vendor/* 
--exclude=node_modules/* 
--exclude=db/* 
--exclude=log/

--langdef=golang
--langmap=golang:.go
--regex-golang=/func([ \t]+\([^)]+\))?[ \t]+([a-zA-Z0-9_]+)/\2/f,func/
--regex-golang=/var[ \t]+([a-zA-Z_][a-zA-Z0-9_]+)/\1/v,var/
