bindkey -e #Use emacs mode
bindkey '^[[1;5C' forward-word # [Ctrl-RightArrow] 
bindkey '^[[1;5D' backward-word # [Ctrl-LeftArrow] 

alias cat='bat --paging=never'
mcat () {
pandoc $1 | lynx -stdin
}

save_alias () {
        echo $1 >> ~/.functions/.aliases
        reload
}
reload () {
        exec zsh
}
save_fun () {
        which $1 >> ~/.functions/.base
        reload
}
